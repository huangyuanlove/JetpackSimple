<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.animation.SharedElementActivity">
    <Button
        android:text="shared_button"
        android:id="@+id/shared_element_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="shared_text"
        android:id="@+id/shared_element_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:text="shared_image"

        android:id="@+id/shared_element_image"
        android:src="@drawable/rocket_thrust3"
        android:layout_width="150dp"
        android:layout_height="150dp" />

</LinearLayout>